<?xml version="1.0" encoding="utf-8"?>
<com.kustomer.kustomersdk.Views.KUSMLFormValuesPickerView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include layout="@layout/kus_options_picker_layout"
        android:id="@+id/mlFormOptionPicker"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/kusInputBarSeparatorColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMlSelectedValues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"/>

        <FrameLayout
            android:id="@+id/btnSendMessage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kus_shape_circle_white"
                android:tint="@color/kusSendButtonColor"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/kus_ic_arrow_upward_white_24dp"
                tools:ignore="ContentDescription" />
        </FrameLayout>

    </LinearLayout>


</com.kustomer.kustomersdk.Views.KUSMLFormValuesPickerView>